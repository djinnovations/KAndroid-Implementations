<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/appBGColor</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/controlColor</item>
        <item name="colorControlActivated">@color/controlColor</item>
        <item name="colorControlHighlight">@color/controlColor</item>

        <item name="android:titleTextStyle">@style/Toolbar.TitleText</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorPrimary">@color/toolbarTextColor</item>
        <item name="android:textColorSecondary">@color/toolbarTextColor</item>
        <item name="actionMenuTextColor">@color/toolbarIconColor</item>
        <item name="android:actionBarStyle">@style/toolbarStyle</item>
    </style>

    <style name="radioColor">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="colorControlNormal">@color/controlColor</item>
        <item name="colorControlActivated">@color/controlColor</item>
        <item name="colorControlHighlight">@color/controlColor</item>
        <item name="android:actionBarStyle">@style/toolbarStyle</item>

    </style>
    <style name="toolbarStyle">
        <item name="android:background">@color/toolbarBG</item>
        <item name="background">@color/toolbarBG</item>
        <item name="colorControlNormal">@color/toolbarIconColor</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorPrimary">@color/toolbarTextColor</item>
        <item name="android:textColorSecondary">@color/toolbarTextColor</item>
        <item name="actionMenuTextColor">@color/toolbarIconColor</item>
        <item name="android:titleTextStyle">@style/Toolbar.TitleText</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="color">@color/toolbarTextColor</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/toolbarIconColor</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.SemiTransparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/semiTransparentWindow</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="AppTheme.NoActionBar.Showcase">
    </style>
    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:padding">10dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="RoundButton">
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/btn_round</item>
    </style>


    <style name="circleButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/social_login_button_text_color</item>
        <item name="android:background">@drawable/social_button_bg</item>
    </style>
    <style name="circleSmallButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/social_login_button_text_color</item>
        <item name="android:background">@drawable/social_button_bg</item>
    </style>

    <style name="buyStyle" parent="circleSmallButton">
        <item name="android:textColor">@drawable/vote_buy_text_color</item>
    </style>
    <style name="notBuyStyle" parent="circleSmallButton">
        <item name="android:textColor">@drawable/vote_not_buy_text_color</item>
    </style>
    <style name="botOp1" parent="circleSmallButton">
        <item name="android:textColor">@drawable/vote_bot_op1_text_color</item>
    </style>
    <style name="botOp2" parent="circleSmallButton">
        <item name="android:textColor">@drawable/vote_bot_op2_text_color</item>
    </style>
    <style name="botOp3" parent="circleSmallButton">
        <item name="android:textColor">@drawable/vote_bot_op3_text_color</item>
    </style>

    <style name="postFotterButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/post_fotter_button_text_color</item>
        <item name="android:background">@drawable/feed_fotter_button_bg</item>
    </style>

    <style name="postFotterButtonWhite" parent="@android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/post_fotter_button_text_white_color</item>
        <item name="android:background">@drawable/feed_fotter_button_white_bg</item>
    </style>

    <style name="socialLoginButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/social_login_button_text_color</item>
        <item name="android:background">@drawable/social_button_bg</item>
    </style>

    <style name="menuButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@drawable/social_login_button_text_color</item>
        <item name="android:background">@drawable/social_button_bg</item>
    </style>

    <style name="menuButtonLabel">
        <item name="android:textColor">@color/socialLoginButtonNormalStart</item>
    </style>


    <style name="linkButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@drawable/link_button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/link_button_bg</item>
        <item name="android:padding">0dip</item>
    </style>
    <style name="voteLinkButton" parent="linkButton">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@drawable/vote_link_button_text_color</item>
    </style>
    <style name="linkBlackButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@drawable/black_link_button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/link_button_bg</item>
        <item name="android:padding">0dip</item>
    </style>
    <style name="linkWhiteButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@drawable/link_button_white_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/link_button_bg</item>
        <item name="android:padding">0dip</item>
    </style>

    <style name="appackground">
        <item name="android:background">@color/appBGColor</item>
    </style>

    <style name="Toolbar.Button" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/theme_toolbar_button_style</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Titletext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/darkColor</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ShowcaseButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/social_login_button_text_color</item>
        <item name="android:background">@drawable/social_button_bg</item>
    </style>
    <style name="ShowcaseButton.White">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/social_button_bg</item>
        <item name="android:backgroundTint">@android:color/white</item>
    </style>


    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="iconSmallButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#FFE225C3</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FormEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/bg_edt</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textSize">13sp</item>
    </style>


    <color name="appBGColor">#ffffff</color>
</resources>
