<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--button_disable-->
    <item android:state_enabled="false" android:color="@color/darkColor"/>
    <!--button_pressed-->
    <item android:state_pressed="true"
        android:state_enabled="true" android:color="@color/colorPrimary"/>
    <!--button_focused-->
    <item android:state_focused="true"
        android:state_enabled="true" android:color="@color/darkColor"/>
    <!--button_enabled-->
    <item
        android:state_enabled="true" android:color="@color/darkColor"/>

</selector>