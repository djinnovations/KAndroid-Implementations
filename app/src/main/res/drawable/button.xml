<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <!--button_disabled-->
        <item android:state_enabled="false">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/buttonRadius"/>
                <padding android:bottom="@dimen/buttonRadius" android:right="@dimen/buttonRadius" android:top="@dimen/buttonRadius" android:left="@dimen/buttonRadius"/>
                <stroke android:width="@dimen/buttonBorderWidth" android:color="@color/buttonDisableBorder" />
                <gradient  android:angle="@integer/buttonGradientAngle"  android:startColor="@color/buttonDisableStart" android:endColor="@color/buttonDisableEnd"  />
            </shape>
        </item>

        <!--button_pressed-->
        <item android:state_pressed="true"
            android:state_enabled="true">
            <shape android:shape="rectangle"  >
                <corners android:radius="@dimen/buttonRadius"/>
                <padding android:bottom="@dimen/buttonRadius" android:right="@dimen/buttonRadius" android:top="@dimen/buttonRadius" android:left="@dimen/buttonRadius"/>
                <stroke android:width="@dimen/buttonBorderWidth" android:color="@color/buttonPressBorder" />
                <gradient  android:angle="@integer/buttonGradientAngle"  android:startColor="@color/buttonPressStart" android:endColor="@color/buttonPressEnd"  />
            </shape>
        </item>

        <!--button_focused-->
        <item android:state_focused="true"
            android:state_enabled="true">
            <shape android:shape="rectangle"  >
                <corners android:radius="@dimen/buttonRadius"/>
                <padding android:bottom="@dimen/buttonRadius" android:right="@dimen/buttonRadius" android:top="@dimen/buttonRadius" android:left="@dimen/buttonRadius"/>
                <stroke android:width="@dimen/buttonBorderWidth" android:color="@color/buttonPressBorder" />
                <gradient  android:angle="@integer/buttonGradientAngle"  android:startColor="@color/buttonPressStart" android:endColor="@color/buttonPressEnd"  />
            </shape>
        </item>

        <!--button_enabled-->
        <item
            android:state_enabled="true">
            <shape android:shape="rectangle"  >
                <corners android:radius="@dimen/buttonRadius"/>
                <padding android:bottom="@dimen/buttonRadius" android:right="@dimen/buttonRadius" android:top="@dimen/buttonRadius" android:left="@dimen/buttonRadius"/>
                <stroke android:width="@dimen/buttonBorderWidth" android:color="@color/buttonNormalBorder" />
                <gradient  android:angle="@integer/buttonGradientAngle"  android:startColor="@color/buttonNormalStart" android:endColor="@color/buttonNormalEnd"  />
            </shape>
        </item>
    </selector>