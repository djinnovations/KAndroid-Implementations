<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <padding android:bottom="3dp" android:right="3dp" android:top="3dp" android:left="3dp"/>
            <stroke android:width="@dimen/buttonBorderWidth" android:color="@color/socialLoginButtonPressBorder" />
            <gradient  android:angle="@integer/buttonGradientAngle"  android:startColor="@color/socialLoginButtonPressStart" android:endColor="@color/socialLoginButtonPressEnd"  />
        </shape>
    </item>

    <item android:state_enabled="true" android:state_selected="true">
        <shape android:shape="oval">
            <padding android:bottom="3dp" android:right="3dp" android:top="3dp" android:left="3dp"/>
            <stroke android:width="@dimen/buttonBorderWidth" android:color="@color/votedColor" />
            <gradient  android:angle="@integer/buttonGradientAngle"  android:startColor="@color/votedColor" android:endColor="@color/votedColor"  />
        </shape>
    </item>


    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <padding android:bottom="3dp" android:right="3dp" android:top="3dp" android:left="3dp"/>
            <stroke android:width="@dimen/buttonBorderWidth" android:color="@color/socialLoginButtonPressBorder" />
            <gradient  android:angle="@integer/buttonGradientAngle"  android:startColor="@color/socialLoginButtonPressStart" android:endColor="@color/socialLoginButtonPressEnd"  />
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >
            <padding android:bottom="3dp" android:right="3dp" android:top="3dp" android:left="3dp"/>
            <stroke android:width="@dimen/buttonBorderWidth" android:color="@color/socialLoginButtonNormalBorder" />
            <gradient  android:angle="@integer/buttonGradientAngle"  android:startColor="@color/socialLoginButtonNormalStart" android:endColor="@color/socialLoginButtonNormalEnd"  />
        </shape>
    </item>
</selector>