<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <gradient
                android:angle="90"
                android:endColor="@android:color/transparent"
                android:startColor="#44000000"></gradient>//Background Color
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="@color/productFilterItemBackgraound" />
            <stroke
                android:width="0dp"
                android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
</layer-list>