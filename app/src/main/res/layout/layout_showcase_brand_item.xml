<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="@dimen/appDefault1XMargin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/default_circle_indicator_stroke_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:background="@drawable/header_bg"
            android:id="@+id/collection_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:textColor="@android:color/black"
            android:id="@+id/collection_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:padding="12dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:id="@+id/collection_description"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/extra"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="275"
                android:textSize="24sp"
                android:paddingLeft="12dp"
                android:paddingRight="8dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/collection_likes"/>

            <com.mikepenz.iconics.view.IconicsButton
                style="@style/circleButton"
                android:layout_width="@dimen/circle_button_small_height"
                android:text="@string/icon_follow_user"
                android:layout_height="@dimen/circle_button_small_height"
                android:id="@+id/likeButton"/>

        </LinearLayout>



    </LinearLayout>



</LinearLayout>