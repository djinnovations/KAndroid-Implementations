<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/side_nav_bar"
    android:id="@+id/userHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/coverImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/sliding_up_panel_above_shadow"
        />

    <org.github.images.CircularImageView
        tools:background="#cccccc"
        android:layout_width="90dp"
        android:layout_marginTop="15dp"
        android:layout_height="90dp"
        android:id="@+id/userImage"
        app:border="true"
        app:border_color="@color/white"
        app:border_width="3dp"
        app:shadow="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



    <LinearLayout
        tools:background="#cccccc"
        android:orientation="vertical"
        android:id="@+id/followingPort"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/coverImage">
        <TextView
            android:layout_gravity="center_horizontal"
            android:text="Following"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="2"
            android:shadowColor="#66000000"
            android:textColor="#ffffff"
            android:id="@+id/countFollowingLabel"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/countFollowing"
            android:textSize="20sp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="2"
            android:shadowColor="#66000000"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>







    <LinearLayout
        tools:background="#cccccc"
        android:orientation="vertical"
        android:id="@+id/followersPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_toRightOf="@+id/followingPort"
        android:layout_alignBottom="@+id/coverImage">
        <TextView
            android:layout_gravity="center_horizontal"
            android:text="Followers"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="2"
            android:shadowColor="#66000000"
            android:textColor="#ffffff"
            android:id="@+id/countFollowersLabel"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="2"
            android:shadowColor="#66000000"
            android:textColor="#ffffff"
            android:id="@+id/countFollowers"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/userName"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="2"
        android:shadowColor="#66000000"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        tools:text="User Name"
        android:textSize="20sp"

        android:layout_below="@+id/userImage"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Designer"
        android:id="@+id/designer"
        android:textSize="14sp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="4"
        android:visibility="gone"
        android:shadowColor="#66000000"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/userName"
        android:layout_centerHorizontal="true" />

    <TextView
        style="@style/linkWhiteButton"
        android:text="Follow"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="2"
        android:shadowColor="#66000000"
        android:id="@+id/followLink"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/userName"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
