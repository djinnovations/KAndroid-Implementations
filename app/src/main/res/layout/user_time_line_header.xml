<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/side_nav_bar"
    android:id="@+id/userHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/coverImage"
        android:scaleType="centerCrop"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="-15dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/box"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                tools:background="#cccccc"
                android:orientation="vertical"
                android:id="@+id/followingPort"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:layout_margin="@dimen/padding_default_2x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/userName"
                android:layout_toStartOf="@+id/userName">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:text="Following"
                    android:id="@+id/countFollowingLabel"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/countFollowing"
                    android:textSize="20sp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <org.github.images.CircularImageView
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                tools:background="#cccccc"
                android:layout_width="90dp"

                android:layout_height="90dp"
                android:id="@+id/userImage"
                app:border="true"
                app:border_color="@color/colorPrimaryDark"
                app:border_width="1dp"
                app:shadow="false"/>

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                tools:background="#cccccc"
                android:orientation="vertical"
                android:id="@+id/followersPort"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_default_2x"

                android:layout_toRightOf="@+id/userName"
                android:layout_toEndOf="@+id/userName">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:text="Followers"
                    android:id="@+id/countFollowersLabel"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/countFollowers"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_marginTop="@dimen/padding_default_half"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:id="@+id/userName"
            android:layout_height="wrap_content"
            tools:text="User Name"
            android:textSize="20sp"/>

        <TextView
            android:text="Designer"
            android:id="@+id/designer"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>



        <TextView
            style="@style/linkWhiteButton"
            android:text="Follow"
            android:id="@+id/followLink"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/padding_default_half"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>



</RelativeLayout>
