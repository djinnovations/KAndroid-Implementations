<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">



<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_margin="@dimen/padding_default"
    android:layout_gravity="center"
    android:elevation="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout
    android:background="#f9c801"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        android:layout_width="0dp"
            android:layout_margin="@dimen/padding_default_2x"
            android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Feedback Counts"
            android:textColor="@color/darkColor"
        android:id="@+id/textView7"/>
        <com.mikepenz.iconics.view.IconicsButton
            android:id="@+id/remove"
            android:text="@string/icon_remove"
            style="@style/postFotterButton"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/circle_button_small_height"
            android:layout_height="@dimen/circle_button_small_height"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:scaleType="fitCenter"
        android:layout_height="120dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/padding_default_2x"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <Button
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/padding_default_2x"
            android:layout_width="wrap_content"
            android:id="@+id/feedback"
            android:layout_height="wrap_content" android:text="Give us Feedback"/>
        <Button
            android:layout_gravity="right"
            android:id="@+id/nav_rate_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Rate us"/>


    </LinearLayout>
</LinearLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>