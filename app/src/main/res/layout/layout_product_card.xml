<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="2dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/white">
    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="64"
                android:padding="8dp"
                android:gravity="center"
                android:id="@+id/likes_count"
                android:layout_gravity="center_vertical"/>
            <com.mikepenz.iconics.view.IconicsButton
                style="@style/iconSmallButton"
                android:text="@string/icon_heart_like"
                android:layout_width="@dimen/circle_button_tiny_height"
                android:layout_height="@dimen/circle_button_tiny_height"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/eric"
                android:id="@+id/product_image"
                android:layout_gravity="center_horizontal"/>

            <include
                layout="@layout/layout_product_actions" />

        </FrameLayout>


        <Button
            style="@style/circleSmallButton"
            android:layout_width="@dimen/circle_button_tiny_height"
            android:layout_height="@dimen/circle_button_tiny_height"
            android:text="+"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/button"
            android:layout_gravity="right"/>
    </LinearLayout>



</android.support.v7.widget.CardView>