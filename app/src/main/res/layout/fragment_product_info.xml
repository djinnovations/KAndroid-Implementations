<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingTop="12dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/product_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:paddingRight="12dp"
            android:text="Designer Name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="italic"/>

        <ImageView
            android:id="@+id/followButton"
            style="@style/RoundButton"
            android:layout_width="@dimen/circle_button_tiny_height"
            android:layout_height="@dimen/circle_button_tiny_height"
            android:src="@drawable/ic_b_follow"/>
    </LinearLayout>

    <TextView
        android:id="@+id/collection_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="sans-serif-light"
        android:paddingRight="12dp"
        android:text="Eternity Rings Collection"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:textSize="14sp"/>

    <include
        android:id="@+id/collection_style"
        layout="@layout/layout_cutomize_title"/>

    <TextView
        android:id="@+id/collection_style_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="sans-serif-light"
        android:paddingRight="12dp"
        android:text="Everyday wear, lightweight"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:textSize="14sp"/>

    <include

        android:id="@+id/description"
        layout="@layout/layout_cutomize_title"/>

    <TextView
        android:id="@+id/description_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="sans-serif-light"
        android:paddingRight="12dp"
        android:text="Ornate gold scrollwork surrounded by sparkles decorate these delightful dangle earrings with a classic post top."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:textSize="14sp"/>

    <include
        android:id="@+id/product_detail_style"
        layout="@layout/layout_cutomize_title"/>

    <TextView
        android:id="@+id/product_detail_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="sans-serif-light"
        android:lineSpacingMultiplier="1.2"
        android:paddingRight="12dp"
        android:text="Product Code\n1001EA1115S9O2G2M07\n\nHeight\t\t\t\t\t\t\tWidth\n25.99 mm\t\t\t\t\t11.44 mm\n\nProduct Weight[Approx.]\n4.578 grams"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:textSize="14sp"/>

</LinearLayout>