<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/header_bg"
        android:alpha=".3"
        android:scaleType="centerCrop"/>


    <org.github.images.CircularImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/userImage"
        app:border="true"
        app:border_color="@color/colorPrimaryDark"
        app:border_width="1dp"
        app:shadow="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_default_4x"/>

    <TextView
        android:layout_marginTop="@dimen/padding_default_2x"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:id="@+id/userName"
        android:layout_below="@+id/userImage"
        android:layout_height="wrap_content"
        tools:text="User Name"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/editProfile"
        android:text="Edit Profile"
        style="@style/linkWhiteButton"
        android:visibility="gone"
        android:layout_marginTop="@dimen/padding_default_4x"
        android:layout_marginRight="@dimen/padding_default_2x"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
