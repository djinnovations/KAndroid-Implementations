<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:gravity="center"
              android:padding="16dp"
              android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_weight="1"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:id="@+id/name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textSize="13sp"
        android:text="New Text"
        android:id="@+id/extra"/>

    <org.github.images.CircularImageView
        android:id="@+id/image"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/designer"
        android:layout_width="@dimen/circle_button_small1_height"
        android:layout_height="@dimen/circle_button_small1_height"/>

    <Button
        android:layout_width="@dimen/circle_button_tiny_height"
        android:layout_height="@dimen/circle_button_tiny_height"
        android:text="+"
        android:gravity="center"
        style="@style/circleSmallButton"
        android:id="@+id/addRemoveButton"/>
</LinearLayout>