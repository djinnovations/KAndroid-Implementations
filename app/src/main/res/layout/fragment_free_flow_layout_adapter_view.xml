<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecyclerFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/horizontalScrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <com.goldadorn.main.views.FreeFlowLayout
            android:id="@+id/viewGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:vertical_spacing="@dimen/padding_default_half"
            app:horizontal_spacing="@dimen/padding_default_half"
            android:layout_margin="@dimen/padding_default_half"/>
    </ScrollView>
    <include layout="@layout/_fragment_recycler_empty_view"/>

</RelativeLayout>